# Top-level EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript / TypeScript / JSX / TSX
[*.{js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 150

# JSON, config files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
